<div class="category-header">
    <h2 class="category-title"><%= @category.name %></h2>
    <p class="category-details"><%= @category.details %></p>
</div>

<div class="category-actions">
    <%= link_to "Go Back", categories_path, class: "action-link" %>
    <%= link_to "Edit", edit_category_path(@category), class: "action-link" %>
    <%= link_to "Delete", category_path(@category), 
        data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        }, class: "action-link" %>
</div>

<div class="tasks-section">
    <div class="task-create">
        <%= link_to "Create new task", new_category_task_path(@category), class: "action-link" %>
    </div>
    <h3>Tasks</h3>
    <div class="tasks-list">
        <%= render @category.tasks %>
    </div>
</div>